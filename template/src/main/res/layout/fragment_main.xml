<?xml version="1.0" encoding="utf-8"?>

<!-- Sample fragment layout for the ViewPager.
    A positive padding equal to the negative margin of the the ViewPager is added to nullify it.
    An opaque background is placed on it in order cover the residing view

    Another View capable of nested scrolling can be used in it5s place-->
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:paddingTop="120dp"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="TextView" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>